alias tfwsse='terraform workspace select'
alias tfwsrm='terraform workspace delete'
alias tfwsne='terraform workspace new'
alias tfwssh='terraform workspace show'
alias tfpdes='terraform plan -destroy'
alias tfpref='terraform plan -refresh-only'
alias tfaaa='terraform apply -auto-approve'
alias tfplf='terraform plan -lock=false'
alias tfalf='terraform apply -lock=false'
alias tfpdeslf='terraform plan -destroy -lock=false'
alias tfplfdes='terraform plan -lock=false -destroy'
alias tfpreflf='terraform plan -refresh-only -lock=false'
alias tfplfref='terraform plan -lock=false -refresh-only'
alias tfaaalf='terraform apply -auto-approve -lock=false'
alias tfalfaa='terraform apply -lock=false -auto-approve'
