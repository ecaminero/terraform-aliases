alias tfprefnoc='terraform plan -refresh-only -no-color'
alias tfaaanoc='terraform apply -auto-approve -no-color'
alias tfplfnoc='terraform plan -lock=false -no-color'
alias tfalfnoc='terraform apply -lock=false -no-color'
alias tfpdeslfnoc='terraform plan -destroy -lock=false -no-color'
alias tfplfdesnoc='terraform plan -lock=false -destroy -no-color'
alias tfpreflfnoc='terraform plan -refresh-only -lock=false -no-color'
alias tfplfrefnoc='terraform plan -lock=false -refresh-only -no-color'
alias tfaaalfnoc='terraform apply -auto-approve -lock=false -no-color'
alias tfalfaanoc='terraform apply -lock=false -auto-approve -no-color'
